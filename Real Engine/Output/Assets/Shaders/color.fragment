#version 330 core
#extension GL_ARB_explicit_uniform_location : enable

layout(location = 5) uniform sampler2D texture_diffuse1;

in vec2 TexCoords;
in vec4 Color;

out vec4 outColor;

void main()
{    
    vec4 texelColor = texture(texture_diffuse1, TexCoords);
	//outColor = vec4(texelColor.rgb * Color.rgb, texelColor.a * Color.a);
	outColor = vec4(texelColor.rgb * Color.rgb, 0.4);
}